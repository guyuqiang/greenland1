        <TextView style="@style/xiahuaxian_center" />

        <LinearLayout style="@style/assetinformation_list_item_layout">

            <TextView
                style="@style/assetinformation_list_item_usertextsizeandwidth"
                android:text="@string/assetinformation_list_item_user" />

            <TextView
                android:id="@+id/assetpand_text_usename"
                style="@style/assetinformation_list_item_editusertextsizeandwidth"
                android:text="" />

            <TextView
                style="@style/assetinformation_list_item_textsizeandwidth"
                android:text="@string/assetinformation_list_item_assettype" />

            <TextView
                android:id="@+id/assetpand_text_assettype"
                style="@style/assetinformation_list_item_textsizeandwidthwrap"
                android:layout_weight="5"
                android:text="" />
        </LinearLayout>

        <TextView style="@style/xiahuaxian_center" />

